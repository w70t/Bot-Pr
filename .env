# ====================================
# متغيرات البوت الأساسية
# ====================================

# توكن البوت من @BotFather (مطلوب)
BOT_TOKEN=your_bot_token_here

# معرف المدير - احصل عليه من @userinfobot (مطلوب)
ADMIN_ID=your_admin_id_here

# معرف قناة السجلات (اختياري)

LOG_CHANNEL_ID=

# ====================================
# إعدادات MongoDB (مطلوب)
# ====================================

# رابط الاتصال بقاعدة البيانات MongoDB

MONGODB_URI=your_mongodb_uri_here

# ====================================
# إعدادات الخادم
# ====================================

# المنفذ (Port)
PORT=8080

# رابط الـ Webhook للسيرفرات الخارجية (اختياري)
# إذا كنت تشغل البوت محلياً، اتركه فارغاً
RAILWAY_PUBLIC_DOMAIN=

# أو استخدم WEBHOOK_URL
WEBHOOK_URL=

# ====================================
# إعدادات الدفع (اختياري)
# ====================================

# توكن الدفع (إذا كنت تستخدم نظام الدفع)
PAYMENT_TOKEN=

# ====================================
# ملاحظات مهمة
# ====================================
# 1. لا تضع مسافات حول علامة =
# 2. لا تضع علامات اقتباس حول القيم
# 3. للحصول على BOT_TOKEN: تحدث مع @BotFather
# 4. للحصول على ADMIN_ID: استخدم @userinfobot
# 5. للحصول على MONGODB_URI: أنشئ حساب مجاني على https://www.mongodb.com/cloud/atlas
